<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Style x:Key="TextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Margin" Value="3,2,2,2" />
    </Style>
    <!--  Style for the Price Column chart  -->
    <Style x:Key="PriceColumnSeriesStyle"
               TargetType="s:FastColumnRenderableSeries">
        <Setter Property="SeriesColor"
                    Value="#FFC6E6FF" />
        <Setter Property="FillColor"
                    Value="#774083B7" />
        <Setter Property="RolloverMarkerTemplate">
            <Setter.Value>
                <ControlTemplate>
                    <Ellipse Width="9"
                                 Height="9"
                                 Fill="#774083B7"
                                 Stroke="White"
                                 StrokeThickness="2" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="IsVisible"
                    Value="True" />
    </Style>
</ResourceDictionary>